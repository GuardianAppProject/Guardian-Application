<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeatBelt"
    android:background="@color/appTheme2Color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/SeatBeltTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3s"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:textSize="20sp"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:src="@drawable/seatbelt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="در ابتدا لطفا کمربند ایمنی\n خود را ببندید!"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:textSize="34sp"
        android:textAlignment="center"
        android:fontFamily="@font/adobe_arabic_bold"
        android:textColor="#404040"/>

</LinearLayout>