<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:layout_weight="1"
    android:background="@color/appThemeColor"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/appThemeColor"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.22"
            android:gravity="center">

            <ImageView
                android:id="@+id/logo_SignUp"
                android:layout_width="93dp"
                android:layout_height="93dp"
                android:src="@drawable/logo_white"
                android:layout_gravity="center"
                android:layout_marginTop="20dp" />
            <!--            android:visibility="gone"-->


            <!--        <pl.droidsonroids.gif.GifImageView-->
            <!--            android:id="@+id/logoGif"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="match_parent"-->
            <!--            android:src="@drawable/logo_bounce"-->
            <!--            android:background="@color/appThemeColor" />-->

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.78"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="15dp"
                android:orientation="vertical"
                android:background="#c3e99e">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:src="@drawable/signup" />


                <TextView
                    android:textColor="#A1000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/signUp_subtitle1"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/iran_sans"/>

                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/edit_text_background"
                    android:fontFamily="@font/iran_sans"
                    android:gravity="center_horizontal|center_vertical"
                    android:textAlignment="center"
                    android:nextFocusDown="@id/password"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textSize="17sp"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:paddingLeft="15dp">


                        <TextView
                            android:textColor="#A1000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/signUp_subtitle2"
                            android:textSize="15sp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:paddingRight="6dp"
                            android:fontFamily="@font/iran_sans"/>

                        <ImageButton
                            android:id="@+id/passwordLock"
                            android:layout_width="18dp"
                            android:layout_height="16dp"
                            android:background="@drawable/padlock2"
                            android:layout_gravity="center_vertical|center_horizontal" />

                    </LinearLayout>
                </RelativeLayout>



                <EditText
                    android:inputType="textPassword"
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/edit_text_background"
                    android:fontFamily="@font/iran_sans"
                    android:gravity="center_horizontal|center_vertical"
                    android:textAlignment="center"
                    android:nextFocusDown="@id/phoneNum"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textSize="17sp" />



                <TextView
                    android:textColor="#A1000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/singUp_subtitle3"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/iran_sans"/>

                <EditText
                    android:inputType="phone"
                    android:id="@+id/phoneNum"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/edit_text_background"
                    android:fontFamily="@font/iran_sans"
                    android:gravity="center_horizontal|center_vertical"
                    android:textAlignment="center"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textSize="17sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:id="@+id/messageTextSignUp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textColor="#2DB42D"
                    android:textSize="12sp"
                    android:paddingRight="6dp"
                    android:paddingLeft="6dp"
                    android:fontFamily="@font/iran_sans"/>

                <Button
                    android:id="@+id/SignUpButt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="7.5dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/button_background"
                    android:text="@string/signUp_button"
                    android:textColor="@color/inputBoxColor"
                    android:fontFamily="@font/iran_sans"
                    android:textSize="16sp"/>
                <Button
                    android:id="@+id/signUpIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#c3e99e"
                    android:text="@string/signUp_secondButton"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/iran_sans"
                    style="?android:attr/borderlessButtonStyle"
                    android:textColor="#606060"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/progress_bar"
        android:elevation="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_centerHorizontal="true"
        android:padding="13dp"
        android:visibility="invisible"
        android:id="@+id/signUpProgress">

        <ProgressBar
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true" />

    </LinearLayout>


</RelativeLayout>