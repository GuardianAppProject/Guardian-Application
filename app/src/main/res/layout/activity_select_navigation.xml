<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectNavigation"
    android:id="@+id/drawer_layout2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.mapbox.mapboxsdk.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            mapbox:mapbox_cameraTargetLat="35.715298"
            mapbox:mapbox_cameraTargetLng="51.404343"
            mapbox:mapbox_cameraZoom="12" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:alpha="1"
            tools:ignore="MissingConstraints">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#7E7E7E"
                android:alpha="1"/>

            <!-- This LinearLayout represents the contents of the screen  -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/menu_icon"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_marginLeft="6dp"
                    android:id="@+id/menuButton2"/>

                <!-- The ActionBar displayed at the top -->
                <!--        <include-->
                <!--            layout="@layout/toolbar"-->
                <!--            android:layout_width="match_parent"-->
                <!--            android:layout_height="wrap_content" />-->

                <!-- The main content view where fragments are loaded -->
                <FrameLayout
                    android:id="@+id/flContent"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="47.5dp"
                android:layout_height="54dp"
                android:layout_gravity="right">



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingRight="6dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="7dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/iran_sans"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="گاردین"
                        android:textAlignment="center"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/imageView"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textColor="#D8FFFFFF"/>

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="6dp"
                        android:alpha="1"
                        android:fontFamily="@font/iran_sans"
                        android:src="@drawable/blue"
                        android:text="@string/main_percentDescription"
                        android:textColor="#191919"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ebtekar"
                        android:text="میانگین رانندگی سالم شما: "
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="7dp"
                        app:layout_constraintStart_toEndOf="@+id/textView3"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7.5dp"
                        android:layout_marginLeft="7.5dp"
                        android:layout_marginBottom="7dp"
                        android:fontFamily="@font/ebtekar"
                        android:text="71% "
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textColor="#DD000000"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#FFFFFF"
                    android:alpha="0.2"
                    android:elevation="2dp" />

            </FrameLayout>

        </FrameLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_location_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="10dp"
            android:tint="@android:color/white"
            app:backgroundTint="#85C1E9"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@android:drawable/ic_search_category_default"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/startButton"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="85dp"
            android:layout_marginRight="20dp"
            android:background="@color/mapboxGrayLight"
            android:enabled="false"
            android:layout_marginBottom="10dp"
            android:text="@string/activity_selectNav_startTrip"
            android:textColor="@color/mapboxWhite"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/iran_sans"
            app:layout_constraintStart_toEndOf="@+id/fab_location_search" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B6F485"
            android:gravity="center_horizontal"
            android:paddingTop="12dp"
            android:text="@string/activity_selectNav_description"
            android:textAlignment="center"
            android:textSize="19dp"
            app:layout_constraintBottom_toBottomOf="@+id/mapView"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="63dp"
            android:fontFamily="@font/iran_sans"
            android:paddingBottom="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nvView2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        app:menu="@menu/drawer_view"
        app:headerLayout="@layout/nav_header"/>

</androidx.drawerlayout.widget.DrawerLayout>